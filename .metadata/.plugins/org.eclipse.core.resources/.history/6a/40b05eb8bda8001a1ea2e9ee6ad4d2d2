	 -->
	 <resultMap type="com.study.mybatis.bean.Department" id="MyDept"></resultMap>
	 
	<!-- public Department getDeptByIdPlus(Integer id); -->
	<select id="getDeptById" resultMap="MyDept">
		SELECT
			a.id did,
			a.dept_name dept_name,
			b.id eid,
			b.last_name last_name,
			b.gender gender,
			b.email email 
		FROM
			tbl_dept a
		LEFT JOIN 
			tbl_employee b 
		ON 
			a.id = b.d_id 
		WHERE
			a.id = #{id};
	</select>
	
</mapper>